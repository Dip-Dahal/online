<head>
  <link rel="stylesheet" href="/stylesheets/booksStyle.css">
</head>

<body>
  <div class="container">
      <div class="row">
        {{# each products}}
        {{# each this}}
          <div class="col-md-4 col-lg-3 col-xl-3 col-sm-6 col-xs-12 ">
            <div class="card">
              <div class="card-block">
                <img class="card-img-top img-fluid" src="{{this.imagePath}}" alt="Card image cap">
                <div class="card-body clearfix">
                  <h5 class="card-title">{{this.title}} </h5>
                  <p class="card-text">{{this.description}}</p>
                  <div class="price float-left">
                    NPR: {{this.price}}
                  </div>
                  <a href="/add-to-cart-Books/{{this._id}}" class="btn btn-success float-right">Add To Cart</a>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
          {{/each}}
      </div>
  </div>
</body>
