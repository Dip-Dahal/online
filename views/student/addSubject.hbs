<head>
  <link rel="stylesheet" href="/stylesheets/addSubjectNameSty.css">
  <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=" crossorigin="anonymous"></script>
  <script type="text/javascript">
    function CheckListed(data, txtSearch, id) {
      var objList = document.getElementById(id+'s');
      for (var i = 0; i < objList.options.length; i++) {
        if (objList.options[i].value.trim().toUpperCase() == txtSearch.trim().toUpperCase()) {
          return true;
        }
      }
      alert(data + " " + txtSearch + " " + ' is incorrect');
      document.getElementById(id).value = '';
      $(this).focus();
      return false; // text does not matched ;
    }
  </script>
  <script>
    $(document).ready(function() {


      $('input:text:first').focus();

      $('#studentstream').keypress(function(e) {
        if (e.keyCode == 13) {

          if ($('#studentstream').val() == "") {
            return false;
          } else {
            $('#studentclass').focus();
            event.preventDefault();

          }
        }
      });


      $('#studentclass').keypress(function(e) {
        if (e.keyCode == 13) {

          if ($('#studentclass').val() == "") {
            return false;
          } else {
            $('#subject').focus();
            event.preventDefault();

          }
        }
      });

      $('#subject').keypress(function(e) {
        if (e.keyCode == 13) {
            $('#submit').focus();
          }
      });

    });
  </script>

</head>

<body>
  <div class="dividerss">

  </div>
  <div class="loginBox">
    <img src="/images/students/book.png" alt="" class="user">

    <h2>Add Subject Details</h2>
    <form onload="" action="/student/addSubject" method="post"  enctype="application/x-www-form-urlencoded">

      <span>Stream :</span>
      <input type="text" list="studentstreams" name="studentstream" id="studentstream" class="form-input" placeholder="General" value="" onChange="CheckListed('Stream',this.value, this.id)" required>
      <datalist id="studentstreams">
        <option value="GENERAL">
        <option value="TECHNICAL">
        <option value="MANAGEMENT">
        <option value="COMMERCE">
        <option value="ARTS">
      </datalist>

      <span>Class :</span>
      <input type="text" list="studentclasss" name="studentclass" id="studentclass" class="form-input" placeholder="Class" value=""  onChange="CheckListed('Class',this.value, this.id)" required>
      <datalist id="studentclasss">
        <option value="Nursery">
        <option value="LKG">
        <option value="UKG">
        <option value="1">
        <option value="2">
        <option value="3">
        <option value="4">
        <option value="5">
        <option value="6">
        <option value="7">
        <option value="8">
        <option value="9">
        <option value="10">
        <option value="11">
        <option value="12">
      </datalist>

      <span>Subject :</span>
      <input type="text" name="subject" id="subject" class="form-input" placeholder="Enter Subject Name" value="">

      <input type="hidden" name="_csrf" value="{{ csrfToken }}">

      <input type="submit" name="submit" id="submit" value="Save Subject Details">
    </form>

  </div>
</body>
