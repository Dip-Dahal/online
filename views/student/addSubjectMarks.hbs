<head>
  <link rel="stylesheet" href="/stylesheets/addSubjectMarksStyle.css">
  <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=" crossorigin="anonymous"></script>
  <script type="text/javascript">
    function CheckListed(data, txtSearch, id) {
      var objList = document.getElementById(id+'s');
      for (var i = 0; i < objList.options.length; i++) {
        if (objList.options[i].value.trim().toUpperCase() == txtSearch.trim().toUpperCase()) {
          return true;
        }
      }
      alert(data + " " + txtSearch + " " + ' is incorrect');
      document.getElementById(id).value = '';
      $(this).focus();
      return false; // text does not matched ;
    }
  </script>
  <script>
    $(document).ready(function() {


      $('input:text:first').focus();

      $('#terminal').keypress(function(e) {
        if (e.keyCode == 13) {

          if ($('#terminal').val() == "") {
            return false;
          } else {
            $('#studentstream').focus();
            event.preventDefault();
          }
        }
      });

      $('#studentstream').keypress(function(e) {
        if (e.keyCode == 13) {

          if ($('#studentstream').val() == "") {
            return false;
          } else {
            $('#studentclass').focus();
            event.preventDefault();

          }
        }
      });


      $('#studentclass').keypress(function(e) {
        if (e.keyCode == 13) {

          if ($('#studentclass').val() == "") {
            return false;
          } else {
            $('#subject').focus();
            event.preventDefault();

          }
        }
      });

      $('#subject').keypress(function(e) {
        if (e.keyCode == 13) {

          if ($('#subject').val() == "") {
            return false;
          } else {
            $('#theoryFM').focus();
            event.preventDefault();

          }
        }
      });

      $('#theoryFM').keypress(function(e) {
        if (e.keyCode == 13) {

          if ($('#theoryFM').val() == "") {
            return false;
          } else {
            $('#theoryPM').focus();
            event.preventDefault();

          }
        }
      });

      $('#theoryPM').keypress(function(e) {
        if (e.keyCode == 13) {

          if ($('#theoryPM').val() == "") {
            return false;
          } else {
            $('#practicalFM').focus();
            event.preventDefault();

          }
        }
      });
      $('#practicalFM').keypress(function(e) {
        if (e.keyCode == 13) {

          if ($('#practicalFM').val() == "") {
            return false;
          } else {
            $('#practicalPM').focus();
            event.preventDefault();

          }
        }
      });

      $('#practicalPM').keypress(function(e) {
        if (e.keyCode == 13) {
            $('#submit').focus();
          }
      });

    });
  </script>

</head>

<body>
  <div class="dividerss">

  </div>
  <div class="loginBox">
    <img src="/images/students/exam.jpg" alt="" class="user">

    <h2>Add Subject Marks</h2>
    <form onload="" action="/student/addSubjectMarks" method="post"  enctype="application/x-www-form-urlencoded">

      <span>Terminal :</span>
      <input type="text"  list="terminals" name="terminal" id="terminal" class="form-input" placeholder="Enter Exam Terminal"  onChange="CheckListed('Terminal',this.value, this.id)" required>
      <datalist id="terminals">
        <option value="First Terminal Exam">
        <option value="Second Terminal Exam">
        <option value="Third Terminal Exam">
        <option value="Annual Exam">
      </datalist>

      <span>Stream :</span>
      <input type="text" list="studentstreams" name="studentstream" id="studentstream" class="form-input" placeholder="General" value="" onChange="CheckListed('Stream',this.value, this.id)" required>
      <datalist id="studentstreams">
        <option value="GENERAL">
        <option value="TECHNICAL">
        <option value="MANAGEMENT">
        <option value="COMMERCE">
        <option value="ARTS">
      </datalist>

      <span>Class :</span>
      <input type="text" list="studentclasss" name="studentclass" id="studentclass" class="form-input" placeholder="Class" value=""  onChange="CheckListed('Class',this.value, this.id)" required>
      <datalist id="studentclasss">
        <option value="Nursery">
        <option value="LKG">
        <option value="UKG">
        <option value="1">
        <option value="2">
        <option value="3">
        <option value="4">
        <option value="5">
        <option value="6">
        <option value="7">
        <option value="8">
        <option value="9">
        <option value="10">
        <option value="11">
        <option value="12">
      </datalist>

      <span>Subjects :</span>
      <input type="text" list="subjects" name="subject" id="subject" class="form-input" placeholder="Enter Subject Name" value=""  onChange="CheckListed('Subject',this.value, this.id)" required>
      <datalist id="subjects">
        {{# each subjects}}
          {{# each this}}
          <option value="{{this.studentSubject}}">
          {{/each}}
        {{/each}}
      </datalist>


      <span>THEORY</span><br>
      <span id="theory">FM :</span>
      <input type="number" name="theoryFM" id="theoryFM" class="form-input" placeholder="Full Mark" value=""  oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
    type = "number"
    maxlength = "3" max="100" min="0" step="1" required>
      <span>PM:</span>
      <input type="number" name="theoryPM" id="theoryPM" class="form-input" placeholder="Pass Mark" value=""  oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
    type = "number"
    maxlength = "2" max="60" min="0" step="1" required>

      <span>PRACTICAL</span><br>
      <span id="theory">FM :</span>
      <input type="number" name="practicalFM" id="practicalFM" class="form-input" placeholder="Full Mark" value=""   oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
    type = "number"
    maxlength = "3" max="100" min="0" step="1" required>
      <span>PM:</span>
      <input type="number" name="practicalPM" id="practicalPM" class="form-input" placeholder="Pass Mark" value=""   oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
    type = "number"
    maxlength = "2" max="60" min="0" step="1" required>

      <input type="submit" name="submit" id="submit" value="Save Student Details">
    </form>
  </div>
  <script>
    function readURL(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function(e) {
          $('#blah')
            .attr('src', e.target.result)
            .width(150)
            .height(150);
        };

        reader.readAsDataURL(input.files[0]);
      }
    }
  </script>
</body>
