

<head>
  <link rel="stylesheet" href="/stylesheets/signinStyle.css">
</head>
<body>
  <div class="dividerss">

  </div>
<div class="loginBox">
  <img src="/images/user.png" alt=""class="user">

  <h2>Log In</h2>
  {{#if hasErrors}}
      {{# each messages}}
        <span class="errors-signup">{{this}} </span>
      {{/each}}
      <span>&nbsp;&nbsp;</span>
  {{/if}}
  <form onload="disableSubmit()" action="/user/signin" method="post">
    <p>Email</p>
    <input type="email" name="email" id="email" placeholder="Enter Email" value="" required>

    <p>Password</p>
    <input type="password" name="password" id="password" placeholder="Enter Password" value="" required>

    <input type="hidden" name="_csrf" value="{{ csrfToken }}">

    <input type="submit" name="submit" id="submit" value="Log In">
    <a href="#">Forget Password</a>

  </form>
</div>

</body>
